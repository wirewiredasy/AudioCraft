[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn api_gateway.main:app --host 0.0.0.0 --port 8000 --reload"
waitForPort = 8000

